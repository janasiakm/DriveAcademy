@model DriveAcademyMVC.Models.Car

@{
    ViewData["Title"] = "Edycja Samochodu";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" asp-route-id="@Model.CarId" method="post">
    <div class="form-group">
        <label asp-for="Mark">Marka:</label>
        <input asp-for="Mark" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Model">Model:</label>
        <input asp-for="Model" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ProdYear">Rok Produkcji:</label>
        <input asp-for="ProdYear" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="NrRej">Nr Rejestracyjny:</label>
        <input asp-for="NrRej" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
</form>