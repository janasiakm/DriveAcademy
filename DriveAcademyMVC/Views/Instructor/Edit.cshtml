@model DriveAcademyMVC.Models.Instructor

@{
    ViewData["Title"] = "Edycja Instruktora";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" asp-route-id="@Model.Id" method="post">
    <div class="form-group">
        <label asp-for="FirstName">Imię:</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LastName">Nazwisko:</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DateOfBirth">Data urodzenia (format: YYYYMMDD):</label>
        <input asp-for="DateOfBirth" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="IdNumber">Nr Uprawnień:</label>
        <input asp-for="IdNumber" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
</form>