@model IEnumerable<DriveAcademyMVC.Models.Instructor>

@{
    ViewData["Title"] = "Lista Instruktorów: ";
}
<a href="@Url.Action("Add")" class="btn btn-success">Dodaj nowego</a>

<h1>@ViewData["Title"]</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Data urodzenia</th>
            <th>Nr Uprawnień</th>
            <th>Kategorie</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var instructor in Model)
        {
            <tr>
                <td>@instructor.Id</td>
                <td>@instructor.FirstName</td>
                <td>@instructor.LastName</td>
                <td>@instructor.DateOfBirth</td>
                <td>@instructor.IdNumber</td>

                 <td> 
                    <a href="@Url.Action("Category", new { id = instructor.Id})" class="btn btn-primary">Kategorie</a>
                 </td>
                
                <td>
                    <a href="@Url.Action("Edit", new { id = instructor.Id})" class="btn btn-primary">Edytuj</a>
                    <a href="@Url.Action("Delete", new { id = instructor.Id})" class="btn btn-danger"
                    onclick="return confirm('Czy na pewno chcesz usunąć tego instruktora?')">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>